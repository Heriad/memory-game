<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" stylesheets="@../styles/menu.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MenuController">

  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300" minWidth="10" prefWidth="65" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="500" minWidth="10" prefWidth="500" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="560" minWidth="10" prefWidth="65" />
  </columnConstraints>

  <rowConstraints>
    <RowConstraints maxHeight="30" minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="50" minHeight="10" prefHeight="50" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="50" minHeight="0" prefHeight="40" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="300" minHeight="10" prefHeight="250" vgrow="SOMETIMES" />
  </rowConstraints>

  <Label fx:id="welcomeLabel" text="Welcome in memory game" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

  <Label fx:id="newGameLabel" onMouseClicked="#startNewGame" text="New Game" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP">
     <GridPane.margin>
        <Insets top="30" />
     </GridPane.margin>
  </Label>

  <Label fx:id="highScoresLabel" onMouseClicked="#checkHighScores" text="High Scores" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP">
     <GridPane.margin>
        <Insets top="90" />
     </GridPane.margin>
  </Label>

  <Label fx:id="exitLabel" onMouseClicked="#exitGame" text="Exit Game" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP">
     <GridPane.margin>
        <Insets top="150" />
     </GridPane.margin>
  </Label>

</GridPane>
